# GCP Project Configuration
project = "your-gcp-project-id"
region  = "asia-northeast1"

# Runner Manager Configuration
runner_manager_image = "docker.io/nakamasato/gha-vm-self-hosted-runner:latest"
queue_name           = "runner-manager"

# VM Auto-stop Configuration
inactive_minutes = "15"

# Deletion Protection
deletion_protection = true  # Set to false to allow terraform destroy without extra steps

# Cloud Run Resource Configuration
cpu_limit    = "1"      # CPU limit: "1", "2", "4", etc.
memory_limit = "512Mi"  # Memory limit: "512Mi", "1Gi", "2Gi", etc.

# CPU Allocation Mode
# true  = request-based (CPU only allocated during request processing) - cost-effective, default
# false = instance-based (CPU always allocated) - faster response, higher cost
cpu_idle = true

# GitHub App Configuration
github_app_id              = "123456"   # Your GitHub App ID
github_app_installation_id = "12345678" # Installation ID (same for all repos)

# Runner Configuration (JSON array)
# Each entry maps a repository + labels to a specific VM instance
# Format: [{"repo": "owner/repo", "labels": ["self-hosted"], "vm_instance_name": "...", "vm_instance_zone": "..."}]

# Single repository example:
runner_config = <<-EOT
[{"repo": "owner/repo", "labels": ["self-hosted"], "vm_instance_name": "github-runner", "vm_instance_zone": "asia-northeast1-a"}]
EOT

# Multiple repositories example:
# runner_config = <<-EOT
# [{"repo": "owner/repo1", "labels": ["self-hosted", "linux"], "vm_instance_name": "github-runner-linux", "vm_instance_zone": "asia-northeast1-a"}, {"repo": "owner/repo2", "labels": ["self-hosted", "gpu"], "vm_instance_name": "github-runner-gpu", "vm_instance_zone": "us-central1-a"}]
# EOT
