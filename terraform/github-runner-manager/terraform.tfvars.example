# GCP Project Configuration
project = "your-gcp-project-id"
region  = "asia-northeast1"
zone    = "asia-northeast1-a"

# Existing Runner VM Configuration
runner_instance_name = "github-runner"  # Name of your existing VM

# Runner Manager Configuration
runner_manager_image = "docker.io/nakamasato/gha-vm-self-hosted-runner:latest"
queue_name           = "runner-manager"

# VM Auto-stop Configuration
inactive_minutes = "15"

# Target Labels (comma-separated)
target_labels = "self-hosted"
# Examples:
# target_labels = "self-hosted,linux"
# target_labels = "self-hosted,linux,gpu"

# Deletion Protection
deletion_protection = true  # Set to false to allow terraform destroy without extra steps
